{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-ready.dev/schemas/claude-marketplace.json",
  "title": "Claude Plugin Marketplace Declaration",
  "description": "Schema for .claude-plugin/marketplace.json files used by ai-ready for plugin discovery",
  "type": "object",
  "required": ["name", "version", "description", "skillPath"],
  "errorMessage": {
    "type": "must be an object",
    "required": {
      "name": "Missing required field: \"name\"",
      "version": "Missing required field: \"version\"",
      "description": "Missing required field: \"description\"",
      "skillPath": "Missing required field: \"skillPath\""
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$",
      "description": "Plugin identifier (letters, numbers, hyphens, underscores)",
      "errorMessage": {
        "type": "Field \"name\" must be a string",
        "minLength": "Field \"name\" must not be empty",
        "pattern": "Field \"name\" must start with a letter and contain only letters, numbers, hyphens, or underscores"
      }
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "description": "Plugin version (semver recommended)",
      "errorMessage": {
        "type": "Field \"version\" must be a string",
        "minLength": "Field \"version\" must not be empty"
      }
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Brief description of what the plugin does",
      "errorMessage": {
        "type": "Field \"description\" must be a string",
        "minLength": "Field \"description\" must not be empty"
      }
    },
    "skillPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\.\\.)(?!/)(?!.*\\.\\./)[^\\0]+$",
      "description": "Relative path to skill directory (must not escape package root)",
      "errorMessage": {
        "type": "Field \"skillPath\" must be a string",
        "minLength": "Field \"skillPath\" must not be empty",
        "pattern": "Field \"skillPath\" must be a relative path within the package (no \"..\" or absolute paths)"
      }
    },
    "author": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "url": { "type": "string", "format": "uri" }
          }
        }
      ],
      "description": "Plugin author information",
      "errorMessage": "Field \"author\" must be a string or an object with name/email/url"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to plugin documentation",
      "errorMessage": {
        "format": "Field \"homepage\" must be a valid URL"
      }
    },
    "repository": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "url": { "type": "string" }
          }
        }
      ],
      "description": "Source code repository"
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Discovery tags for the plugin"
    },
    "category": {
      "type": "string",
      "description": "Plugin category"
    }
  },
  "additionalProperties": true
}
